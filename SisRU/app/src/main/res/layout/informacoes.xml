<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:textStyle="bold"
        android:text="Informações"
        android:layout_marginTop="40dp"
        android:id="@+id/textTab2"
        
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Preços"
        android:textAlignment="center"
        android:layout_marginTop="105dp"
        android:id="@+id/textTab3"
        
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="Discente: XX Reais"
        android:layout_marginTop="150dp"
        android:id="@+id/textTab4"
        android:layout_alignStart="@+id/textTab5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Docentes: YY Reais"
        android:textAlignment="center"
        android:layout_marginTop="190dp"
        android:id="@+id/textTab5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Externos: ZZ Reais"
        android:layout_marginTop="230dp"
        android:textAlignment="center"
        android:id="@+id/textTab6"
        android:layout_alignEnd="@+id/textTab5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Horário de Funcionamento"
        android:layout_marginTop="290dp"
        android:id="@+id/textTab7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Almoço: hh:mm - hh:mm"
        android:layout_marginTop="330dp"
        android:textAlignment="center"
        android:id="@+id/textTab8"
        android:layout_alignEnd="@+id/textTab5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Jantar: hh:mm - hh:mm"
        android:layout_marginTop="370dp"
        android:textAlignment="center"
        android:id="@+id/textTab9"
        android:layout_alignEnd="@+id/textTab5"
        android:layout_alignParentStart="true" />

</RelativeLayout>